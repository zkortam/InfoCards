{
  "icon": "./assets/icon.svg",
  "name": "InfoCards",
  "hint": "Display numerical information",
  "settings": [
    {
      "name": {
        "key": "Display Settings"
      },
      "settings": [
        {
          "name": {
            "key": "Title"
          },
          "key": "title",
          "type": "text",
          "hint": "Enter the title text"
        },
        {
          "name": {
            "key": "Title Color"
          },
          "key": "titleColor",
          "type": "color",
          "hint": "Select the title color"
        },
        {
          "name": {
            "key": "Value Color"
          },
          "key": "valueColor",
          "type": "color",
          "hint": "Select the value color"
        },
        {
          "name": {
            "key": "Container Color"
          },
          "key": "containerColor",
          "type": "color",
          "hint": "Select the container color"
        },
        {
          "name": {
            "key": "Container Opacity"
          },
          "key": "containerOpacity",
          "type": "number",
          "min": 1,
          "max": 100,
          "hint": "Select the container opacity (1-100)"
        },
        {
          "name": {
            "key": "Border Color"
          },
          "key": "borderColor",
          "type": "color",
          "hint": "Select the border color"
        },
        {
          "name": {
            "key": "Border Opacity"
          },
          "key": "borderOpacity",
          "type": "number",
          "min": 1,
          "max": 100,
          "hint": "Select the border opacity (1-100)"
        },
        {
          "name": {
            "key": "Border Thickness"
          },
          "key": "borderThickness",
          "type": "number",
          "hint": "Select the border thickness"
        },
        {
          "name": {
            "key": "Corner Rounding"
          },
          "key": "borderRadius",
          "type": "number",
          "hint": "Select the corner rounding"
        },
        {
          "name": {
            "key": "Card Spacing"
          },
          "key": "cardSpacing",
          "type": "number",
          "hint": "Select the spacing between cards (px)",
          "default": 10
        }
      ]
    }
  ],
  "bindingsTrays": [
    {
      "key": "tray-key",
      "name": {
        "key": "tray"
      },
      "queryRole": "measure",
      "minCount": 1,
      "settings": [
        {
          "name": "Conditional Formatting",
          "settings": [
            {
              "name": "Conditions",
              "key": "conditions",
              "type": "conditional-formatting",
              "uiControlOptions": {
                "labels": {
                  "backgroundColor": "Progress bar"
                }
              }
            }
          ]
        }
      ]
    }
  ]
