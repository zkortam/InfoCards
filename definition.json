{
  "icon": "./assets/icon.svg",
  "name": "InfoCards",
  "hint": "Drag one item to 'BreakBy' for grouped lists (e.g., [49, 54, 695]).\nDrag two items for individual numbers (e.g., 59).",
  "options": {
    "aggregation": true,
    "individualFilter": true,
    "aggregateFilter": true
  },
  "settings": [
    {
      "name": {
        "key": "Display Settings"
      },
      "settings": [
        {
          "name": {
            "key": "Title"
          },
          "key": "title",
          "type": "text",
          "hint": "Enter the title text"
        },
        {
          "name": {
            "key": "Title Color"
          },
          "key": "titleColor",
          "type": "color",
          "hint": "Select the title color"
        },
        {
          "name": {
            "key": "Value Color"
          },
          "key": "valueColor",
          "type": "color",
          "hint": "Select the value color"
        },
        {
          "name": {
            "key": "Container Color"
          },
          "key": "containerColor",
          "type": "color",
          "hint": "Select the container color"
        },
        {
          "name": {
            "key": "Container Opacity"
          },
          "key": "containerOpacity",
          "type": "number",
          "min": 1,
          "max": 100,
          "hint": "Select the container opacity (1-100)"
        },
        {
          "name": {
            "key": "Border Color"
          },
          "key": "borderColor",
          "type": "color",
          "hint": "Select the border color"
        },
        {
          "name": {
            "key": "Border Opacity"
          },
          "key": "borderOpacity",
          "type": "number",
          "min": 1,
          "max": 100,
          "hint": "Select the border opacity (1-100)"
        },
        {
          "name": {
            "key": "Border Thickness"
          },
          "key": "borderThickness",
          "type": "number",
          "hint": "Select the border thickness"
        },
        {
          "name": {
            "key": "Corner Rounding"
          },
          "key": "borderRadius",
          "type": "number",
          "hint": "Select the corner rounding"
        },
        {
          "name": {
            "key": "Card Spacing"
          },
          "key": "cardSpacing",
          "type": "number",
          "hint": "Select the spacing between cards (px)",
          "default": 10
        },
        {
          "name": {
            "key": "Icon URL"
          },
          "key": "iconUrl",
          "type": "text",
          "hint": "Enter the URL of the icon image"
        }
      ]
    }
  ],
  "bindingsTrays": [
    {
      "key": "tray-key-dim",
      "name": {
        "key": "BreakBy"
      },
      "queryRole": "row",
      "minCount": 1,
      "maxCount": 2
    },
    {
      "key": "tray-key",
      "name": {
        "key": "measures"
      },
      "queryRole": "measure",
      "settings": [
        {
          "name": "Number Format",
          "settings": [
            {
              "name": "Scale",
              "key": "scale1",
              "type": "scale"
            },
            {
              "name": "Format",
              "key": "format",
              "type": "number-format",
              "defaultValue": "###,###"
            },
            {
              "name": "Conditional Format",
              "type": "conditional-formatting"
            },
            {
              "name": "Color",
              "key": "color",
              "type": "color"
            },
            {
              "name": "Transparency",
              "key": "transparency",
              "type": "number",
              "defaultValue": 70
            }
          ]
        }
      ],
      "minCount": 1,
      "maxCount": 5
    }
  ]
}
