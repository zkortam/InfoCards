{
  "icon": "./assets/icon.svg",
  "name": "InfoCards",
  "hint": "Drag one item to 'BreakBy' for grouped lists (e.g., [49, 54, 695]). Drag two items for individual numbers (e.g., 59).",
  "options": {
    "aggregation": true,
    "individualFilter": true,
    "aggregateFilter": true
  },
  "settings": [
    {
      "name": {
        "key": "Display Settings"
      },
      "settings": [
        {
          "name": {
            "key": "Title Color"
          },
          "key": "titleColor",
          "type": "color",
          "hint": "Select the title color",
          "defaultValue": "#000000"
        },
        {
          "name": {
            "key": "Value Color"
          },
          "key": "valueColor",
          "type": "color",
          "hint": "Select the value color",
          "defaultValue": "#000000"
        },
        {
          "name": {
            "key": "Title Font Weight"
          },
          "key": "titleFontWeight",
          "type": "dropdown",
          "options": [
            {
              "key": "300",
              "label": "Light"
            },
            {
              "key": "400",
              "label": "Normal"
            },
            {
              "key": "700",
              "label": "Bold"
            }
          ],
          "defaultValue": "400",
          "hint": "Select the title font weight"
        },
        {
          "name": {
            "key": "Value Font Weight"
          },
          "key": "valueFontWeight",
          "type": "dropdown",
          "options": [
            {
              "key": "300",
              "label": "Light"
            },
            {
              "key": "400",
              "label": "Normal"
            },
            {
              "key": "700",
              "label": "Bold"
            }
          ],
          "defaultValue": "400",
          "hint": "Select the value font weight"
        },
        {
          "name": {
            "key": "Title Font Size"
          },
          "key": "titleFontSize",
          "type": "number",
          "hint": "Set the font size of the title (px)",
          "defaultValue": 14
        },
        {
          "name": {
            "key": "Value Font Size"
          },
          "key": "valueFontSize",
          "type": "number",
          "hint": "Set the font size of the value (px)",
          "defaultValue": 24
        },
        {
          "name": {
            "key": "Text Alignment"
          },
          "key": "textAlignment",
          "type": "dropdown",
          "options": [
            {
              "key": "left",
              "label": "Left"
            },
            {
              "key": "center",
              "label": "Center"
            },
            {
              "key": "right",
              "label": "Right"
            }
          ],
          "defaultValue": "left",
          "hint": "Align text left, center, or right"
        },
        {
          "name": {
            "key": "Container Color"
          },
          "key": "containerColor",
          "type": "color",
          "hint": "Select the container color"
        },
        {
          "name": {
            "key": "Container Opacity"
          },
          "key": "containerOpacity",
          "type": "number",
          "min": 1,
          "max": 100,
          "hint": "Select the container opacity (1-100)"
        },
        {
          "name": {
            "key": "Border Color"
          },
          "key": "borderColor",
          "type": "color",
          "hint": "Select the border color"
        },
        {
          "name": {
            "key": "Border Opacity"
          },
          "key": "borderOpacity",
          "type": "number",
          "min": 1,
          "max": 100,
          "hint": "Select the border opacity (1-100)"
        },
        {
          "name": {
            "key": "Border Thickness"
          },
          "key": "borderThickness",
          "type": "number",
          "hint": "Select the border thickness"
        },
        {
          "name": {
            "key": "Corner Rounding"
          },
          "key": "borderRadius",
          "type": "number",
          "hint": "Select the corner rounding"
        }
      ]
    },
    {
      "name": {
        "key": "Card Spacing"
      },
      "settings": [
        {
          "name": {
            "key": "Horizontal Spacing"
          },
          "key": "horizontalSpacing",
          "type": "number",
          "hint": "Select the horizontal spacing between cards (px)",
          "defaultValue": 10
        },
        {
          "name": {
            "key": "Vertical Spacing"
          },
          "key": "verticalSpacing",
          "type": "number",
          "hint": "Select the vertical spacing between cards (px)",
          "defaultValue": 10
        }
      ]
    },
    {
      "name": {
        "key": "Card Padding"
      },
      "settings": [
        {
          "name": {
            "key": "Card Internal Padding"
          },
          "key": "cardInternalPadding",
          "type": "number",
          "hint": "Set equal padding around the card (px). Overrides individual padding settings if not 0.",
          "defaultValue": 0
        },
        {
          "name": {
            "key": "Padding Top"
          },
          "key": "paddingTop",
          "type": "number",
          "hint": "Set padding above the card content (px)",
          "defaultValue": 10
        },
        {
          "name": {
            "key": "Padding Right"
          },
          "key": "paddingRight",
          "type": "number",
          "hint": "Set padding to the right of the card content (px)",
          "defaultValue": 10
        },
        {
          "name": {
            "key": "Padding Bottom"
          },
          "key": "paddingBottom",
          "type": "number",
          "hint": "Set padding below the card content (px)",
          "defaultValue": 10
        },
        {
          "name": {
            "key": "Padding Left"
          },
          "key": "paddingLeft",
          "type": "number",
          "hint": "Set padding to the left of the card content (px)",
          "defaultValue": 10
        }
      ]
    },
    {
      "name": {
        "key": "Icon Settings"
      },
      "settings": [
        {
          "name": {
            "key": "Icon Size"
          },
          "key": "iconSize",
          "type": "number",
          "hint": "Select the icon size (px)",
          "defaultValue": 40
        },
        {
          "name": {
            "key": "Icon Position"
          },
          "key": "iconPosition",
          "type": "dropdown",
          "options": [
            {
              "key": "top",
              "label": "Top"
            },
            {
              "key": "bottom",
              "label": "Bottom"
            },
            {
              "key": "left",
              "label": "Left"
            },
            {
              "key": "right",
              "label": "Right"
            }
          ],
          "defaultValue": "right"
        },
        {
          "name": {
            "key": "Icon Padding (All Sides)"
          },
          "key": "iconPaddingAll",
          "type": "number",
          "hint": "Set padding around the icon on all sides. This overrides individual icon padding settings when set.",
          "defaultValue": 0
        },
        {
          "name": {
            "key": "Icon Padding Top"
          },
          "key": "iconPaddingTop",
          "type": "number",
          "hint": "Set padding above the icon (px)",
          "defaultValue": 0
        },
        {
          "name": {
            "key": "Icon Padding Right"
          },
          "key": "iconPaddingRight",
          "type": "number",
          "hint": "Set padding to the right of the icon (px)",
          "defaultValue": 0
        },
        {
          "name": {
            "key": "Icon Padding Bottom"
          },
          "key": "iconPaddingBottom",
          "type": "number",
          "hint": "Set padding below the icon (px)",
          "defaultValue": 0
        },
        {
          "name": {
            "key": "Icon Padding Left"
          },
          "key": "iconPaddingLeft",
          "type": "number",
          "hint": "Set padding to the left of the icon (px)",
          "defaultValue": 20
        }
      ]
    },
    {
      "name": {
        "key": "Condition Label Settings"
      },
      "settings": [
        {
          "name": {
            "key": "Show Condition Labels"
          },
          "key": "showConditionLabels",
          "type": "boolean",
          "hint": "Toggle to show or hide condition labels",
          "defaultValue": true
        },
        {
          "name": {
            "key": "Condition Label Spacing"
          },
          "key": "conditionLabelSpacing",
          "type": "number",
          "hint": "Set the spacing around the condition labels (px)",
          "defaultValue": 0
        }
      ]
    }
  ],
  "bindingsTrays": [
    {
      "key": "tray-key-dim",
      "name": {
        "key": "BreakBy"
      },
      "queryRole": "row",
      "maxCount": 1
    },
    {
      "key": "tray-key",
      "name": {
        "key": "Measures"
      },
      "queryRole": "measure",
      "minCount": 1,
      "maxCount": 5,
      "settings": [
        {
          "name": "Number Format",
          "settings": [
            {
              "name": "Scale",
              "key": "scale1",
              "type": "scale"
            },
            {
              "name": "Format",
              "key": "format",
              "type": "number-format",
              "defaultValue": "###,###"
            },
            {
              "name": "Color",
              "key": "color",
              "type": "color"
            },
            {
              "name": "Transparency",
              "key": "transparency",
              "type": "number",
              "defaultValue": 70
            }
          ]
        },
        {
          "name": "Conditional Formatting",
          "settings": [
            {
              "name": "Conditions",
              "key": "conditions",
              "type": "conditional-formatting",
              "uiControlOptions": {
                "labels": {
                  "backgroundColor": "Progress bar"
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
